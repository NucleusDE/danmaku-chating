<Window x:Class="Main.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Settings" Height="160.976" Width="221.603">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Position" HorizontalAlignment="Left" Height="63" VerticalAlignment="Top" Width="214" BorderBrush="White">
            <Grid>
                <RadioButton x:Name="top" Content="Top" HorizontalAlignment="Left" VerticalAlignment="Top" Click="top_Click"/>
                <RadioButton x:Name="move" Content="Move" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,0,0,0" Click="move_Click"/>
                <RadioButton x:Name="bottom" Content="Bottom" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="126,0,0,0" Click="bottom_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Color" HorizontalAlignment="Left" Margin="0,63,0,0" VerticalAlignment="Top" Width="214" Height="67" BorderBrush="White">
            <Border x:Name="colorPreview" Background="White" Margin="0,3" Width="20" BorderBrush="Black" MouseUp="colorPreview_MouseUp"/>
        </GroupBox>
    </Grid>
</Window>
